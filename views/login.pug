extends index

append css
    link(rel="stylesheet" href="/static/bootstrap.min.css")

mixin createGroup(id, holder, label, Type)
    .form-group
        label(for=id).col-sm-3.control-label #{label}
        .col-sm-9
            input(type=Type placeholder=holder id=id).form-control&attributes(attributes)
    
append title 
    | | 登录
block main
    .register-body
        form.form-horizontal
            +createGroup('username','输入用户名','用户名', 'text')(value='admin')
            +createGroup('pwd','输入密码','密码', 'password')(value='admin')
            .form-group
                .col-sm-9.col-sm-offset-3
                    .checkbox.pull-left
                        label
                            input(type='checkbox')
                            | 记住密码
            .form-group
                button.btn.btn-default#loginBtn 登录
                a.btn.btn-default#registerBtn(href='/register') 注册
        p.info
block script
    script(src="/js/login.js")
